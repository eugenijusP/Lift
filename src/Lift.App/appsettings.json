{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "Infrastructure": {
        "DefaultBuildingLiftCount": 2,
        "DefaultBuildingFlourCount": 16,
        "MoveSpeed": 1,
        "DoorSpeed": 2
    },
    "Sentry": {
        "Dsn": "",
        "MaxRequestBodySize": "Always",
        "SendDefaultPii": true,
        "MinimumBreadcrumbLevel": "Debug",
        "MinimumEventLevel": "Warning",
        "AttachStackTrace": true,
        "Debug": false,
        "DiagnosticsLevel": "Error"
    }
}
